<header>
  <h1>Categories</h1>

  <% admin_only do %>
    <ul class='actions'>
      <li>
        <%= link_to "New Category", new_admin_category_path, class: "new" %>
      </li>
    </ul>
  <% end %>
</header>

<table class="table table-striped table-responsive table-hover">
  <thead>
    <tr>
      <th>Name</th>
      <th>Created</th>
      <th>Events</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= format_date(category.created_at) %></td>
        <td><%= category.events.count %></td>
        <td>
          <%= link_to "View", category_path(category), class: 'btn btn-primary btn-xs' %>
          <%= link_to "Edit", edit_admin_category_path(category), class: 'btn btn-info btn-xs' %>
          <%= link_to "Delete", admin_category_path(category), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-xs' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Back to Dashboard", admin_root_path, class: "btn btn-primary btn-sm" %>
