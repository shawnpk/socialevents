<% provide(:title, @event.title) %>

<header>
  <h1 id='show-title'><%= @event.title %></h1>

  <ul class="actions">
    <li><%= link_to 'Edit Event', edit_event_path(@event), class: 'edit' if policy(@event).edit? %></li>
    <li><%= link_to 'Delete Event', event_path(@event), method: :delete, data: { confirm: 'Are you sure you want to delete this event?' }, class: 'delete' if policy(@event).destroy? %></li>
  </ul>
</header>

<div class="row">
  <div class="col-sm-9">
    <%= image_tag @event.image, class: 'event-image' if @event.image %>

    <div class="event-meta">
      <h4>
        <span class="event-start">
          <strong>Starts: </strong>
          <%= format_date(@event.start_date) %>
        </span>
      </h4>
      <p>
        <span class="event-end">
          <strong>Ends:</strong>
          <%= format_date(@event.end_date) %>
        </span>
      </p>
    </div>

    <div class="event-details">
      <h3>Event Details</h3>
      <p><%= @event.description %></p>
    </div>

    <header>
      <h3>Comments</h3>
    </header>

    <div id="comments">
      <% if @event.comments.any? %>
        <%= render @event.comments %>
      <% else %>
        <p>There are not comments for this event.</p>
      <% end %>
    </div>
    <%= render 'comments/form', event: @event, comment: @comment if policy(@comment).create? %>
  </div>

  <div class="col-sm-3">
    <div class="sidebar">
      <h4 class="organizer"><%= link_to @event.organizer, user_path(@event.organizer) %></h4>
      <p>
        <span class="event-venue">
          <%= @event.venue %>,
          <strong><%= @event.location %></strong>
        </span>
      </p>
    </div>

    <hr>

    <div class="sidebar">
      <h4 class="tags">Tags</h4>
    </div>

    <hr>

    <div class="sidebar">
      <h4 class="attendees">Attendees</h4>
    </div>

    <hr>

    <div class="sidebar">
      <h4 class="likes">Likes</h4>
    </div>
  </div>
</div>

<%= link_to 'Back', root_path, class: 'btn btn-default btn-sm' %>
